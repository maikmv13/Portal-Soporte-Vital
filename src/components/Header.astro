<style is:global>
    /* 
       CONSOLIDATED HEADER STYLES
       Targeting the Starlight parent .header to avoid double backgrounds
    */
    .header {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        height: 6rem !important;
        background: rgba(255, 255, 255, 0.95) !important;
        backdrop-filter: blur(24px) saturate(160%) !important;
        -webkit-backdrop-filter: blur(24px) saturate(160%) !important;
        border-bottom: 2px solid rgba(0, 0, 0, 0.04) !important;
        z-index: 1000 !important;
        display: flex !important;
        align-items: center !important;
        padding-bottom: 0.5rem !important;
        box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.05) !important;
    }

    .header-container {
        width: 100% !important;
        max-width: 1440px !important;
        margin: 0 auto !important;
        padding: 0 2rem !important;
        display: flex !important;
        align-items: center !important;
        justify-content: space-between !important;
        gap: 2rem !important;
    }

    /* Logo Styles */
    .logo-group {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        flex-shrink: 0;
    }

    .logo-icon {
        width: 52px;
        height: 52px;
        background: #10b981;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }

    .logo-emoji {
        font-size: 2.1rem;
        filter: brightness(0) invert(1);
    }

    .logo-text {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .main-title {
        font-size: 1.4rem;
        font-weight: 900;
        color: #0f172a;
        letter-spacing: -0.03em;
        line-height: 1;
    }

    .sub-title {
        font-size: 0.65rem;
        font-weight: 800;
        color: #10b981;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        margin-top: 0.15rem;
    }

    /* Search Styles */
    .header-search {
        flex-grow: 1;
        max-width: 480px;
    }

    /* Starlight Search Overrides */
    .header-search .pagefind-ui__search-input {
        background: #f1f5f9 !important;
        border-radius: 99px !important;
        border: 1px solid transparent !important;
        transition: all 0.2s !important;
    }
    .header-search .pagefind-ui__search-input:focus {
        background: white !important;
        border-color: #10b981 !important;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
    }

    /* Navigation Styles */
    .header-nav {
        display: flex;
        align-items: center;
        gap: 1.25rem;
    }

    .nav-links {
        display: flex;
        gap: 0.25rem;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.5rem 1rem;
        border-radius: 99px;
        text-decoration: none;
        color: #475569;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.2s;
    }

    .nav-item:hover {
        background: #f1f5f9;
        color: #0f172a;
    }

    .nav-item.active {
        background: #f0fdf4;
        color: #10b981;
    }

    .nav-divider {
        width: 1px;
        height: 24px;
        background: #e2e8f0;
    }

    /* Login Button */
    .login-btn {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        background: #10b981;
        color: white;
        padding: 0.7rem 1.4rem;
        border-radius: 99px;
        font-weight: 700;
        font-size: 0.95rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 10px 20px -5px rgba(16, 185, 129, 0.3);
    }

    .login-btn:hover {
        background: #059669;
        transform: translateY(-2px);
        box-shadow: 0 15px 30px -5px rgba(5, 150, 105, 0.4);
    }

    .login-btn svg {
        opacity: 0.8;
    }

    @media (max-width: 64rem) {
        .header-search,
        .nav-divider {
            display: none !important;
        }
        .header-container {
            padding: 0 1rem !important;
            gap: 0.5rem !important;
        }
        .logo-group {
            gap: 0.5rem !important;
        }
        .logo-icon {
            width: 40px !important;
            height: 40px !important;
            border-radius: 10px !important;
        }
        .logo-emoji {
            font-size: 1.5rem !important;
        }
        .main-title {
            font-size: 1.1rem !important;
        }
        .sub-title {
            font-size: 0.55rem !important;
        }
        .nav-item span {
            display: none !important;
        }
        .nav-item {
            padding: 0.5rem !important;
        }
        .nav-icon {
            margin: 0 !important;
            font-size: 1.25rem !important;
        }
        .login-btn span {
            display: none !important;
        }
        .login-btn {
            padding: 0.6rem !important;
            border-radius: 50% !important;
        }
    }
</style>
