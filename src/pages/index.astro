    z-index: -1;
    pointer-events: none;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
    max-width: 1400px;
    margin: 0 auto;
    align-items: center;
