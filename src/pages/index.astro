    font-weight: 800;
    letter-spacing: -0.02em;
    background: linear-gradient(90deg, #10b981 0%, #06b6d4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
    margin-bottom: 0.5rem;
  }

  .hero-main {
    font-size: clamp(3.5rem, 8vw, 5.5rem);
    font-weight: 900;
    color: #0f172a;
    letter-spacing: -0.04em;
    display: block;
    line-height: 0.95;
  }

  .hero-divider {
    width: 120px;
    height: 8px;
    background: #10b981;
    margin-top: 2.5rem;
    border-radius: 4px;
  }

  .hero-tagline {
    font-size: 1.35rem;
    color: #475569;
    margin: 3rem 0;
    font-weight: 600;
  }

  .hero-btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(90deg, #10b981 0%, #06b6d4 100%);
    color: white;
    padding: 1.2rem 3rem;
    border-radius: 99px;
    font-weight: 700;
    font-size: 1.2rem;
    text-decoration: none;
